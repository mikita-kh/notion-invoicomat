{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/app",
  "compilerOptions": {
    "deleteOutDir": true,
    
    "assets": [
      {
        "include": "/html-document/**/*.njk",
        "outDir": "lib/app"
      },
      {
        "include": "i18n/locales",
        "outDir": "lib/app"
      }
    ]
  }
}
