{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/app",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "src/app/invoice-renderer/services/locales/*.json",
        "outDir": "lib/app/invoice-renderer/services/locales"
      },
      {
        "include": "src/app/invoice-renderer/services/templates/*.njk",
        "outDir": "lib/app/invoice-renderer/services/templates"
      }
    ]
  }
}
