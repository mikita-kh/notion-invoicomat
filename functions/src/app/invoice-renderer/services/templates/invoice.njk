<div class="grid grid-cols-2 gap-x-8 items-start">
		<dl class="flex flex-col gap-y-1">
		<div class="flex flex-col">
			<dt>{{ _.t("Invoice No.", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("Invoice No.", secondaryLanguage) }}{% endif %}:</dt>
      {% if vat_amount == 0 %}
      <span class="italic text-lg">
        {{ _.t("reverse_charge", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("reverse_charge", secondaryLanguage) }}{% endif %}
      </span>
      {% endif %}
			<dd class="text-6xl font-bold">{{invoice_number}}</dd>
		</div>
    <div class="flex gap-x-2">
			<dt>{{ _.t("place_of_issue", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("place_of_issue", secondaryLanguage) }}{% endif %}:</dt>
			<dd>{{seller[0].adress.city}}</dd>
		</div>

		<div class="flex gap-x-2">
			<dt>{{ _.t("issue_date", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("issue_date", secondaryLanguage) }}{% endif %}:</dt>
			<dd>{{issue_date}}</dd>
		</div>
	</dl>
	<div class="p-6">
		<img src="{{seller[0].information.logo[0] | to_base64}}" />
	</div>
</div>


<hr class="my-8" />

<div class="grid grid-cols-3 items-start">
	<div class="flex flex-col gap-y-4">
		<h6 class="text-lg font-medium">{{ _.t("seller", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("seller", secondaryLanguage) }}{% endif %}:</h6>
		<dl class="flex flex-col gap-y-1">
			<div class="flex gap-x-2">
				<dd>{{seller[0].information.name}}</dd>
			</div>

			<div class="flex flex-col">
				<dt>{{seller[0].adress.street}}</dt>
				<dd>{{seller[0].adress.postcode}} {{seller[0].adress.city}}</dd>
			</div>

			<div class="flex gap-x-2">
				<dt class="whitespace-nowrap">{{ _.t("vat_id", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("vat_id", secondaryLanguage) }}{% endif %}</dt>
				<dd>{{seller[0].information.vat_id}}</dd>
			</div>

			<div class="flex flex-col">
				<dt>{{seller[0].bank.name}}</dt>
				<dd class="flex flex-col">
					<span>
						{{seller[0].bank.account}}
					</span>
					{% if seller[0].bank.swift != "" %}
					<span class="seller-bank-swift">
						{{ _.t("swift", primaryLanguage) }}: <span>{{seller[0].bank.swift}}</span>
					</span>
					{% endif %}
				</dd>
			</div>
		</dl>
	</div>
	<div>&nbsp;</div>
	<div class="flex flex-col gap-y-4">
		<h6 class="text-lg font-medium">{{ _.t("buyer", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("buyer", secondaryLanguage) }}{% endif %}:</h6>
		<dl class="flex flex-col gap-y-1">
			<div class="flex gap-x-2">
				<dd>{{client.name}}</dd>
			</div>

			<div class="flex flex-col">
				<dt>{{client.street}}</dt>
				<dd>{{client.postcode}} {{client.city}}, {{client.country}}</dd>
			</div>

			<div class="flex gap-x-2">
				<dt>{{ _.t("vat_id", primaryLanguage) }}</dt>
				<dd>{{client.tax_identification_number}}</dd>
			</div>
		</dl>
	</div>
</div>


<table class="border-collapse mb-8 numeric-tabular table table-auto w-full my-8">
	<thead>
		<tr class="text-white">
			<th class="font-normal text-left bg-gradient-to-b from-gray-600 to-gray-400">{{ _.t("no", primaryLanguage) }}{% if secondaryLanguage %}&nbsp;/ {{ _.t("no", secondaryLanguage) }}{% endif %}</th>
			<th class="font-normal text-left bg-gradient-to-b from-gray-600 to-gray-400">{{ _.t("item", primaryLanguage) }}{% if secondaryLanguage %}&nbsp;/ {{ _.t("item", secondaryLanguage) }}{% endif %}</th>
			<th class="font-normal text-right bg-gradient-to-b from-gray-600 to-gray-400">{{ _.t("quantity", primaryLanguage) }}{% if secondaryLanguage %}&nbsp;/ {{ _.t("quantity", secondaryLanguage) }}{% endif %}</th>
			<th class="font-normal text-right bg-gradient-to-b from-gray-600 to-gray-400">{{ _.t("unit_net_price", primaryLanguage) }}{% if secondaryLanguage %}&nbsp;/ {{ _.t("unit_net_price", secondaryLanguage) }}{% endif %}</th>
			<th class="font-normal text-right bg-gradient-to-b from-gray-600 to-gray-400">{{ _.t("total_net", primaryLanguage) }}{% if secondaryLanguage %}&nbsp;/ {{ _.t("total_net", secondaryLanguage) }}{% endif %}</th>
			<th class="font-normal text-right bg-gradient-to-b from-gray-600 to-gray-400">{{ _.t("vat_rate", primaryLanguage) }}{% if secondaryLanguage %}&nbsp;/ {{ _.t("vat_rate", secondaryLanguage) }}{% endif %}</th>
			<th class="font-normal text-right bg-gradient-to-b from-gray-600 to-gray-400">{{ _.t("vat_amount", primaryLanguage) }}{% if secondaryLanguage %}&nbsp;/ {{ _.t("vat_amount", secondaryLanguage) }}{% endif %}</th>
			<th class="font-normal text-right bg-gradient-to-b from-gray-600 to-gray-400">{{ _.t("total_gross", primaryLanguage) }}{% if secondaryLanguage %}&nbsp;/ {{ _.t("total_gross", secondaryLanguage) }}{% endif %}</th>
		</tr>
	</thead>
	<tbody>
		{% for entry in entries %}
		<tr>
			<td class="text-center">{{loop.index}}</td>
			<td class="text-left">{{entry.name}}</td>
			<td class="text-center">
				{{entry.quantity}}{% if entry.unit == "hours"%}&nbsp;{{ _.t("hours", primaryLanguage) }}{% endif %}
			</td>
			<td class="text-right">{{entry.net_price | format_number}}</td>
			<td class="text-right">{{entry.total_net | format_number}}</td>
			<td class="text-right">{{entry.vat | format_number}}</td>
			<td class="text-right">{{entry.vat_amount | format_number}}</td>
			<td class="text-right">{{entry.total_gross | format_number}}</td>
		</tr>
		{% endfor %}
	</tbody>
	<tfoot>
		<tr>
			<td colSpan="2" style="border:0">&nbsp;</td>
			<td colSpan="2" class="text-right text-white bg-gradient-to-b from-gray-600 to-gray-400">
				<div class="flex flex-col">
					<span>{{ _.t("tax_rate", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("tax_rate", secondaryLanguage) }}{% endif %}</span>
					<span>{{ _.t("total", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("total", secondaryLanguage) }}{% endif %}</span>
				</div>
			</td>
			<td class="text-right">
				<div class="flex flex-col">
					<span>{{total_net}}</span>
					<span>{{total_net}}</span>
				</div>
			</td>
			<td class="text-right" valign=top>
				{{entries[0].vat}}
			</td>
			<td class="text-right">
				<div class="flex flex-col">
					<span>{{vat_amount}}</span>
					<span>{{vat_amount}}</span>
				</div>
			</td>
			<td class="text-right">
				<div class="flex flex-col">
					<span>{{total_gross}}</span>
					<span>{{total_gross}}</span>
				</div>
			</td>
		</tr>
	</tfoot>
</table>

<div class="flex justify-end gap-x-8 text-xl leading-relaxed pr-4">
	<div class="flex flex-col">
		<span>{{ _.t("net_total_price", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("net_total_price", secondaryLanguage) }}{% endif %}</span>
		<span>{{ _.t("vat_total_price", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("vat_total_price", secondaryLanguage) }}{% endif %}</span>
		<span>{{ _.t("gross_total_price", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("gross_total_price", secondaryLanguage) }}{% endif %}</span>
	</div>

	<div class="flex flex-col text-right font-semibold">
		<span>{{formatted_total_net}}</span>
		<span>{{formatted_vat_amount}}</span>
		<span>{{formatted_total_gross}}</span>
	</div>


	{% if invoice_in_foreign_currency %}
	<div class="flex flex-col text-right font-semibold">
		<span>{{total_net_in_pln}}</span>
		<span>{{vat_amount_in_pln}}</span>
		<span>{{total_gross_in_pln}}</span>
	</div>
	{% endif %}
</div>
{% if invoice_in_foreign_currency %}
<hr class="my-8" />
<div>
	{{ _.t("exchange_rate_label", primaryLanguage) | replace("{currency}", currency) | replace("{rate}", rate.mid) | replace("{no}", rate.no) | replace("{date}", rate.effectiveDate) }}{% if secondaryLanguage %}&nbsp;/
	{{ _.t("exchange_rate_label", secondaryLanguage) | replace("{currency}", currency) | replace("{rate}", rate.mid) | replace("{no}", rate.no) | replace("{date}", rate.effectiveDate) }}{% endif %}

	<div class="text-xl leading-relaxed">
		{{ _.t("exchanged_vat", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("exchanged_vat", secondaryLanguage) }}{% endif %}: <span class="font-semibold">{{vat_amount_in_pln}}</span>
	</div>
</div>
{% endif %}

<hr class="my-8" />

<div>
	<span>{{ _.t("total_due", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("total_due", secondaryLanguage) }}{% endif %}:</span>
	<span class="text-2xl font-semibold whitespace-nowrap">{{formatted_total_gross}}</span>
	({{ _.t("in_words", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("in_words", secondaryLanguage) }}{% endif %}: <span class="italic">{{ total_gross_in_words }}</span>)
</div>

<hr class="my-8" />

<div class="grid grid-cols-2 gap-x-8 items-center">

	<img class="h-[128px]" src="{{seller[0].information.signature[0]|to_base64}}" />

	<div class="text-center">{{ _.t("seller_signature", primaryLanguage) }}{% if secondaryLanguage %} / {{ _.t("seller_signature", secondaryLanguage) }}{% endif %}
		<div class="font-semibold text-xl leading-relaxed">{{seller[0].information.name}}</div>
	</div>
</div>